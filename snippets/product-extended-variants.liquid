<link rel="stylesheet" href="{{ 'product-extended-variants.css' | asset_url }}">
<script type="text/javascript" src="{{ 'product-extended-variants.js' | asset_url }}" defer="defer"></script>

<div class="mask_select_clr mt-4">
    <h5>Select color:</h5>
    <div class="clr_options">
        {% assign variant_num = 1 %}
        {%- for block in section.blocks -%}
            {% if block.type == 'variant' %}
                <div class="form-check p-0">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault{{ variant_num }}" value="{{ block.settings.variant_id }}"{% if variant_num == 1 %} checked{% endif %}>
                    <label class="form-check-label" for="flexRadioDefault{{ variant_num }}">
                        {% if block.settings.image != blank %}
                            <img src="{{ block.settings.image | img_url: '250x' }}" alt="{{ block.settings.heading | escape }}">
                        {% endif %}
                        <h6>{{ block.settings.heading }}</h6>
                    </label>
                </div>
                {%- assign variant_num = variant_num | plus: 1 -%} 
            {% endif %}
        {% endfor %}
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        {% if section.settings.reserve == true %}
            product_extended_variants_reserve();
        {% else %}
            product_extended_variants();
        {% endif %}
    });
</script>