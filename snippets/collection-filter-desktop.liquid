<div class="col-filter product-filters">
    <p class="filter">FILTER BY</p>
    <div class="accordion" id="filterPanel">
        {% for filter in collection.filters %}
            {% case filter.type %}
                {% when 'boolean', 'list' %}
                    <div class="accordion-item">

                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#panelsStayOpen-{{ forloop.index }}" aria-expanded="true"
                        aria-controls="panelsStayOpen-{{ forloop.index }}">
                        <span class="fil-title">{{- filter.label | escape }}</span>
                    </button>
    

                    <div id="panelsStayOpen-{{ forloop.index }}" class="accordion-collapse collapse show"
                        aria-labelledby="filterPanel__One">
                        <div class="accordion-body">
                            <ul class=" list-unstyled no-js-hidden" role="list">
                                {%- for value in filter.values -%}
                                    <li class="list-menu__item facets__item">
                                        <label for="{{ filter.param_name | escape }}-{{ forloop.index }}" class="facet-checkbox">
                                            <input
                                                type="checkbox"
                                                name="{{ value.param_name }}"
                                                value="{{ value.value }}"
                                                id="Filter-{{ filter.param_name | escape }}-{{ forloop.index }}"
                                                {% if value.active %}
                                                checked
                                                {% endif %}
                                                {% if value.count == 0 and value.active == false %}
                                                disabled
                                                {% endif %}
                                            >
                                            <span aria-hidden="true">{{ value.label | escape }}</span>
                                        </label>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>

                </div>  
            {% endcase %}
        {% endfor %}
        <div class="clear_filter">
            <a href="javascript:void(0);" class="clear_filter_text">
                Clear filters
            </a>
        </div>
    </div>
</div>