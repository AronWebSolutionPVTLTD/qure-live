{% comment %}
  Renders a standard style menu for the footer.

  Usage:
  {% render 'footer-menu' %}
{% endcomment %}

{% if menu %}
    {% assign menu = linklists[menu] %}

    {% for link in menu.links %}
        {%- if link.links != blank -%}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="footer-wrap">
                <div class="f_title">{{ link.title | escape }}</div>
                <ul>
                    {%- for childlink in link.links -%}
                        <li>
                            <a href="{{ childlink.url }}" aria-label="{{ childlink.title | escape }}">
                                {{ childlink.title }}
                            </a>
                        </li>
                    {%- endfor -%}
                </ul>
            </div>
        </div>
        {%- endif -%}
    {%- endfor -%}
{% endif %}