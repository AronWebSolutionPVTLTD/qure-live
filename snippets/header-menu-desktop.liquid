            <li><a href="{{ link.url }}" aria-label="{{ link.title | escape }}">{{ link.title | escape }}</a></li>
        {% else %}
            <li class="dropdown mega-dropdown new-menu">
                {% if link.url != blank %}
                    <a href="{{ link.url }}" class="mega-drop-tag">
                        {{ link.title | escape }}
                    </a>   
                {% else %}
                    <a class="mega-drop-tag">
                        {{ link.title | escape }}
                    </a>
