<div>
  {% comment %} data {% endcomment %}
  <div id="info-product" style="display: none;">
    component A
  </div>
  <div id="info-result" >
    <span>component B</span>
    {% for block in data %}
      {% if block.type == 'before_and_after' %}
        <div class="swiper swiper-info-result">
          <div class="swiper-wrapper">
            {% for i in (1..3) %}
              {% assign image_id = 'image_new_section_' | append: i %}
              {% assign text_id = 'image_new_section_text_' | append: i %}
              {% if block.settings[image_id] != null %}
                <div class="swiper-slide">
                  <div>
                    <span>{{ block.settings[text_id] }}</span>
                    {{
                      block.settings[image_id]
                      | image_url: width: 600
                      | image_tag: alt: block.settings[text_id]
                    }}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div id="info-derma" style="display: none;">
    component C
    {% for block in data %}
      {% if block.type == 'video_before_and_after' %}
        <div>
          <span>video</span>
          {{
            block.settings.video_new_section
            | video_tag: image_size: '600x', autoplay: true, controls: true, muted: true, loop: false
          }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  {% comment %} selector {% endcomment %}
  <div class="selector-container">
    <ul class="nav-wrapper">
      <li class="nav-item">
        <button 
          class="nav-button active"  
          id="productButton">
          Product
        </button>
      </li>
      <li class="nav-item">
        <button 
        class="nav-button" 
        id="resultButton">
          Real Results
        </button>
      </li>
      <li class="nav-item">
        <button 
        class="nav-button" 
        id="dermaButton">
          Dermatologist
        </button>
      </li>
    </ul>
  </div>
</div>

