<div>
  {% comment %} data {% endcomment %}
  <div id="info-product" style="display: none;">
    <div
      class="tab-pane fade show active"
      id="pills-home"
      role="tabpanel"
      aria-labelledby="pills-home-tab"
    >
      <div
        class="swiper twa__swiper productSlider dot_pagination"
        id="twa__swiper-productSlider"
        data-section-id="productSlider"
        data-autoplay="false"
        data-loop="false"
        data-centerslide="false"
        data-mobile="1.1"
        data-tablet="1"
        data-desktop="1"
        data-spacing="10"
        data-arrowleft="productSlider-swiper-prev"
        data-arrowright="productSlider-swiper-next"
      >
        <div class="swiper-wrapper">
          {% for media in product.media limit: section.settings.product_images_limit offset: 1 %}
            {% if media.media_type == 'video' %}
              {% if media.sources[1].url != blank %}
                {% assign video_source_url = media.sources[1].url %}
              {% else %}
                {% assign video_source_url = media.sources[0].url %}
              {% endif %}

              <div class="swiper-slide video_popup">
                <a
                  class="popup-youtube d-block"
                  href="{{ video_source_url }}"
                >
                  <picture id="image-id">
                    <source media="(min-width:1920px)" srcset="{{ media | img_url: 'master' }}">
                    <source media="(min-width:1600px)" srcset="{{ media | img_url: '1600x' }}">
                    <source media="(min-width:1100px)" srcset="{{ media | img_url: '1100x' }}">
                    <source media="(min-width:720px)" srcset="{{ media | img_url: '720x' }}">
                    <source media="(min-width:540px)" srcset="{{ media | img_url: '540x' }}">
                    <img
                      class="img-fluid"
                      src="{{ media | img_url: '540x' }}"
                      width="100"
                      height="100"
                      alt="{{ block.settings.image.alt | escape }}"
                    >
                  </picture>
                </a>
              </div>
            {% else %}
              <div class="swiper-slide">
                <a class="banner-popup-link" id="popup-link">
                  <picture id="image-id">
                    <source media="(min-width:1920px)" srcset="{{ media | img_url: 'master' }}">
                    <source media="(min-width:1600px)" srcset="{{ media | img_url: '1600x' }}">
                    <source media="(min-width:1100px)" srcset="{{ media | img_url: '1100x' }}">
                    <source media="(min-width:720px)" srcset="{{ media | img_url: '720x' }}">
                    <source media="(min-width:540px)" srcset="{{ media | img_url: '540x' }}">
                    <img
                      class="img-fluid tab_img"
                      src="{{ media | img_url: '540x' }}"
                      width="100"
                      height="100"
                      alt="{{ block.settings.image.alt | escape }}"
                    >
                  </picture>
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
      </div>
    </div>
  </div>
  <div id="info-result">
    {% for block in data %}
      {% if block.type == 'before_and_after' %}
        <div class="swiper swiper-info-result">
          <div class="swiper-wrapper">
            {% for i in (1..5) %}
              {% assign image_id = 'image_new_section_' | append: i %}
              {% assign text_id = 'image_new_section_text_' | append: i %}
              {% if block.settings[image_id] != null %}
                <div class="swiper-slide">
                  {% assign mediaImage = block.settings[image_id] %}
                  <a class="banner-popup-link" id="popup-link">
                  <picture id="image-id">
                    <source media="(min-width:1920px)" srcset="{{ mediaImage | img_url: 'master' }}">
                    <source media="(min-width:1600px)" srcset="{{ mediaImage | img_url: '1600x' }}">
                    <source media="(min-width:1100px)" srcset="{{ mediaImage | img_url: '1100x' }}">
                    <source media="(min-width:720px)" srcset="{{ mediaImage | img_url: '720x' }}">
                    <source media="(min-width:540px)" srcset="{{ mediaImage | img_url: '540x' }}">
                    <img 
                      width="100"
                      height="auto"
                      class="img-fluid tab_img"
                      alt="{{ block.settings[text_id] }}"
                      src="{{ mediaImage | img_url: '540x' }}"> 
                  </picture>                     
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          <div class="swiper-pagination"></div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <div id="info-derma" style="display: none;">
    {% for block in data %}
      {% if block.type == 'video_before_and_after' %}
        <div style="width: 100%; height: auto;">
          {{
            block.settings.video_new_section
            | video_tag: image_size: '100%', autoplay: true, controls: true, muted: true, loop: false
          }}
        </div>
      {% endif %}
    {% endfor %}
  </div>
  {% comment %} selector {% endcomment %}
  <div class="selector-container">
    <ul class="nav-wrapper">
      <li class="nav-item">
        <button
          class="nav-button"
          id="productButton"
        >
          Product
        </button>
      </li>
      <li class="nav-item">
        <button
          class="nav-button active"
          id="resultButton"
        >
          Real Results
        </button>
      </li>
      <li class="nav-item">
        <button
          class="nav-button"
          id="dermaButton"
        >
          Dermatologist
        </button>
      </li>
    </ul>
  </div>
</div>
