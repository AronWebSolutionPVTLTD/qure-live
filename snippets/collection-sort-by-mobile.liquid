<div class="tab-pane fade" id="pills-profile" role="tabpanel"
    aria-labelledby="pills-profile-tab">
    <div class="collection_sort_by">
        {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
        {% for option in collection.sort_options %}
            <div class="sort_by_item">
                <div class="form-check">
                    <label class="form-check-label" for="{{ option.name | escape }}-{{ forloop.index }}">
                        {{ option.name }}
                    </label>
                    <input 
                        class="form-check-input" 
                        type="checkbox" 
                        value="{{ option.value }}" 
                        id="Filter-{{ option.name | escape }}-{{ forloop.index }}" 
                        name="sort_by" 
                        {% if option.value == collection.sort_by %} checked{% endif %}
                    >
                </div>
            </div>
        {% endfor %}
        <div class="clear_filter">
            <a href="javascript:void(0);" class="clear_filter_text">
                Clear filters
            </a>
        </div>
    </div>
</div>