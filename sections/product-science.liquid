<!-- --- technology sources start -- -->
<div class="technolgy_source {{ section.settings.custom_class }}">
    <div class="container">
        <div class="section_header mw-750 text-md-center">
            {% if section.settings.heading != blank %}
            <h2 class="title-lg paddingB">{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.sub_text != blank %}
                {{ section.settings.sub_text }}
            {% endif %}
        </div>
        <div 
            class="patches_tech_grid grid-cols-{{ section.blocks | size }}"
        >
            {% for block in section.blocks %}
            {% case block.type %}
            {% when 'column' %}
                <div class="patches_tech_item">
                    {% if block.settings.image != blank %}
                    <div class="patches_tech_img">
                        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}" class="img-fluid">
                    </div>
                    {% endif %}
                    <div class="patches_tech_content">
                        {% if block.settings.title != blank %}
                        <h6>{{ forloop.index }}: {{ block.settings.title }}</h6>
                        {% endif %}
                        {% if block.settings.pd_text != blank %}
                        {{ block.settings.pd_text }}
                        {% endif %}
                    </div>
                </div>
            {% endcase %}
            {% endfor %}
        </div>
    </div>
</div>
<!-- --- technology sources end --- -->

{% style %}
.patches_tech_grid {
    display: grid;
    gap: 20px;
}

.grid-cols-1 {
    grid-template-columns: repeat(1, auto);
}
.grid-cols-2 {
    grid-template-columns: repeat(2, auto);
}
.grid-cols-3 {
    grid-template-columns: repeat(3, auto);
}
.grid-cols-4 {
    grid-template-columns: repeat(4, auto);
}

@media (max-width: 768px) { /* Mobile view */
    .patches_tech_grid {
        grid-template-columns: 1fr;
    }
}
{% endstyle %}


{% schema %}
{
    "name": "t:sections.product_science.label",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "t:common.heading.label"
        },
        {
          "type": "richtext",
          "id": "sub_text",
          "label": "t:common.text.label"
        },
        {
            "type": "textarea",
            "id": "custom_class",
            "label": "t:common.classname.heading"
        }
    ],
    "blocks": [
        {
            "type": "column",
            "name": "t:common.column.label",
            "limit": 4,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "t:common.image.label"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "t:common.title.label"
                },
                {
                    "type": "richtext",
                    "id": "pd_text",
                    "label": "t:common.text.content"
                }
            ] 
        }
    ],
    "presets": [
        {
            "name": "t:sections.product_science.label"
        }
    ]
}
{% endschema %}