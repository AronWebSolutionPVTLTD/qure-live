<!-- -- get compliment worthy skin start -- -->
<div class="affect_skin section">
    <div class="dsn-right-container">
        <div class="section_header ms-0 d-block d-md-none">
            <h2 class="title-lg paddingB">{{ section.settings.heading }}</h2>
        </div>
        <div class="video_with_slide">
            <div class="actVideo_block">
                <div class="ctmVideo__block">
                    <div class="player">
                        <div class="wistia_responsive_padding" style="padding:177.78% 0 0 0;position:relative;">
                            <div class="wistia_responsive_wrapper"
                                style="height:100%;left:0;position:absolute;top:0;width:100%;">
                                <div class="wistia_embed wistia_async_j7op01weqs seo=false videoFoam=true"
                                    style="height:100%;position:relative;width:100%">
                                    <div class="wistia_swatch"
                                        style="height:100%;left:0;opacity:0;overflow:hidden;position:absolute;top:0;transition:opacity 200ms;width:100%;">
                                        <img src="https://fast.wistia.com/embed/medias/j7op01weqs/swatch"
                                            style="filter:blur(5px);height:100%;object-fit:contain;width:100%;"
                                            alt="" aria-hidden="true"
                                            onload="this.parentNode.style.opacity=1;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

           
            <div class="affect_skinContent">
                <div class="section_header ms-0 d-none d-md-block">
                    <h2 class="title-lg paddingB">{{ section.settings.heading }}</h2>
                </div>
                <div class="get_compliment_wrap">
                    <div class="tab-content" id="pills-tabContent1">
                        {%- for block in section.blocks -%}
                            <div class="tab-pane fade show  {% if forloop.first %} active {%endif %}" id="{{ block.id }}" role="tabpanel"
                                aria-labelledby="pills-specs-tab">
                                <div class="gc_img_wrap">
                                    <div class="gc_img">
                                        <img src="{{ block.settings.image1 | img_url: '1100x' }}" alt="block.settings.image.alt">
                                    </div>
                                    <div class="gc_img">
                                        <img src="{{ block.settings.image2 | img_url: '1100x' }}" alt="block.settings.image.alt">
                                    </div>
                                    <div class="gc_img">
                                        <img src="{{ block.settings.image3 | img_url: '1100x' }}" alt="block.settings.image.alt">
                                    </div>
                                    <div class="gc_img">
                                        <img src="{{ block.settings.image4 | img_url: '1100x' }}" alt="block.settings.image.alt">
                                    </div>
                                </div>
                            </div>
                        {%- endfor -%}
                    </div>
                    <ul class="nav nav-pills mb-3" id="pills-tab-skin" role="tablist">
                        {%- for block in section.blocks -%}
                        <li class="nav-item" role="presentation">
                            <button class="nav-link {% if forloop.first %} active {%endif %}"  id="{{ block.id }}-tab" data-bs-toggle="pill"
                                data-bs-target="#{{ block.id }}" type="button" role="tab"
                                aria-controls="{{ block.id }}" aria-selected="true">{{ block.settings.tab_txt }}</button>
                        </li>
                        {%- endfor -%}
                    </ul>
                    <div class="tab-content" id="pills-tabContent2">
                        {%- for block in section.blocks -%}
                        <div class="tab-pane fade show {% if forloop.first %} active {%endif %}" id="pills-specs" role="tabpanel"
                            aria-labelledby="pills-specs-tab">
                            {{ block.settings.tab_desc }}
                        </div>
                        {%- endfor -%}
                    </div>
                </div>
            </div>
            
            
        </div>
    </div>
</div>
<!-- -- get compliment worthy skin end -- -->

{% schema %}
{
    "name": "how to use",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "t:common.heading.label"
        }
    ],
    "blocks": [
        {
            "type": "Tab",
            "name": "Tab",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "tab_txt",
                    "label": "Tab Name"
                },
                {
                    "type": "richtext",
                    "id": "tab_desc",
                    "label": "Tab Description"
                },
                {
                    "type": "image_picker",
                    "id": "image1",
                    "label": "t:common.image.label"
                },
                {
                    "type": "image_picker",
                    "id": "image2",
                    "label": "t:common.image.label"
                },
                {
                    "type": "image_picker",
                    "id": "image3",
                    "label": "t:common.image.label"
                },
                {
                    "type": "image_picker",
                    "id": "image4",
                    "label": "t:common.image.label"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "how to use"
        }
    ]
}
{% endschema %}