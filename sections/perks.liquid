<!-- -- join section start -- -->
<div class="join_bl section">
    <div class="container">
        <div class="section_header text-center mb-3">
            {% if section.settings.heading != blank %}
                <h2 class="title-xl">{{ section.settings.heading }}</h2>
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="row">
                {%- for block in section.blocks -%}
                    <div class="col-12 col-md-6">
                        <div class="join_item">
                            <div class="j_icon">
                                <img src="{{ block.settings.image | img_url: '150x' }}" alt="">
                            </div>
                            <div class="j_desc">
                                {% if block.settings.heading != blank %}
                                    <h6>{{ block.settings.heading }}</h6>
                                {% endif %}
                                {{ block.settings.text }}
                            </div>
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        {% endif %}
    </div>
</div>
<!-- -- join section end -- -->

{% schema %}
    {
        "name": "t:sections.perks.name",
        "class": "section-perks",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            }
        ],
        "blocks": [
            {
                "type": "object",
                "name": "t:common.object.label",
                "limit": 6,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "t:common.heading.label"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "t:common.text.label"
                    }
                ]
		    }
        ],
        "presets": [
			{
				"name": "t:sections.perks.name"
			}
        ]
    }
{% endschema %}