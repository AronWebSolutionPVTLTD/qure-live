<!-- -- personalized treatment section start -- -->
<div class="personalized_t section">
    <div class="container">
        <div class="section_header text-center mb-3">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg paddingB">{{ section.settings.heading }}</h2> 
            {% endif %}

            {% if section.settings.text != blank %}
                {{ section.settings.text }}
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="pt_icons_wrapper">
                <div class="row">
                    {%- for block in section.blocks -%}
                        {% if block.type == 'object' %}
                            <div class="col-6 col-md-4">
                                <div class="pt_item">
                                    {% if block.settings.image != blank %}
                                        <img src="{{ block.settings.image | img_url: '250x' }}" alt="{{ block.settings.image.alt | escape }}">
                                    {% endif %}
                                    {{ block.settings.text }}
                                </div>
                            </div>
                        {% endif %}
                    {%- endfor -%}
                    {%- for block in section.blocks -%}
                        {% if block.type == 'button' %}
                            {% if block.settings.button_label != blank %}
                                <div class="btn text-center">
                                    <a href="{{ block.settings.button_url }}" class="pt_btn">{{ block.settings.button_label }}</a>
                                </div> 
                            {% endif %}
                        {% endif %}
                    {%- endfor -%}
                </div>
            </div>
        {% endif %}
    </div>
</div>
<!-- -- personalized treatment section end -- -->

