<!-- -- social media start -- -->
<div class="social_media section">
    <div class="container">
        <div class="section_header text-center mw-680 mb-4">
            {% if section.settings.heading != blank %}
                <h2 class="title-lg text-start text-md-center">{{ section.settings.heading }}</h2> 
            {% endif %}
            {% if section.settings.text != blank %}
                {{ section.settings.text }}
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="image_gallery mw-mob-100">
                {%- for block in section.blocks -%}
                    {% if block.settings.image != blank %}
                        <div class="ig_item">
                            <img class="img-fluid insta_img" src="{{ block.settings.image | img_url: '200x' }}" alt="{{ block.settings.image.alt | escape }}">
                        </div>
                    {% endif %}
                {%- endfor -%}
            </div>
        {% endif %}
    </div>
</div>
<!-- -- social media start -- -->

