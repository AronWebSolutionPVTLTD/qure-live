<div class="bestseller">
    <div class="container">
        <div 
            class="swiper dot_pagination bestsellerSlider twa__swiper" 
            id="twa__swiper-bestsellerSlider"
            data-section-id="bestsellerSlider" 
            data-autoplay="false" 
            data-loop="false" 
            data-centerslide="false"
            data-mobile="1" 
            data-tablet="2" 
            data-desktop="3" 
            data-spacing="20"
            data-arrowleft="bestsellerSlider-swiper-prev" 
            data-arrowright="bestsellerSlider-swiper-next">
            <div class="swiper-wrapper bestseller-wrap">
                {%- for block in section.blocks -%}
                    <div class="swiper-slide bestseller-block">
                        {% if block.settings.image != blank %}
                            <div class="bestseller-img">
                                <img src="{{ block.settings.image | img_url: '250x' }}" alt="{{ block.settings.image.alt | escape }}">
                            </div>
                        {% endif %}
                        
                        {% if block.settings.text != blank %}
                            <div class="bestseller-content">
                                <span class="badge-seller">Bestseller</span>
                                {% if block.settings.heading != blank %}
                                    <h4>{{ block.settings.heading }}</h4>
                                {% endif %}
                                <img src="{{ 'results_star-full.svg' | asset_url }}" alt="">
                                {{ block.settings.text }}
                                {% if block.settings.button_label != blank %}
                                    <div class="bestSellerbtn text-center">
                                        <a href="{{ block.settings.button_url }}" class="pt_btn mt-0 w-100">{{ block.settings.button_label }}</a>
                                    </div>
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                {%- endfor -%}
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</div>


