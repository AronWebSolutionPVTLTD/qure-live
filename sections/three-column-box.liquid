<!-- -- qure uses start -- -->
<div class="q_uses_bl section bg-yellow-gradient">
    <div class="container">
        <div class="section_header mb-3 text-center">
            {% if section.settings.heading != blank %}
                <h2 class="title-xl paddingB">{{ section.settings.heading }}</h2>
            {% endif %}

            {% if section.settings.text != blank %}
                {{ section.settings.text }}
            {% endif %}
        </div>
        {% if section.blocks.size > 0 %}
            <div class="row">
                {%- for block in section.blocks -%}
                    <div class="col-12 col-md-6 col-lg-4 q_uses_item-outer">
                        <div class="q_uses_item pe-4">
                            {% if block.settings.image != blank %}
                                <div class="q_use_img">
                                    <img class="img-fluid" src="{{ block.settings.image | img_url: '250x' }}" alt="">
                                </div>
                            {% endif %}

                            <div class="q_uses_content">
                                {% if block.settings.heading != blank %}
                                    <h3>{{ block.settings.heading }}</h3>
                                {% endif %}
                                {{ block.settings.text }}
                            </div>
                        </div>
                    </div>
                {%- endfor -%}
            </div>
        {% endif %}
    </div>
</div>
<!-- -- qure uses end -- -->

{% schema %}
    {
        "name": "t:sections.three-column-box.name",
        "class": "section-three-column-box",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "t:common.text.label"
            }
        ],
        "blocks": [
            {
                "type": "object",
                "name": "t:common.object.label",
                "limit": 3,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "t:common.heading.label"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "t:common.text.label"
                    }
                ]
		    }
        ],
        "presets": [
			{
				"name": "t:sections.three-column-box.name"
			}
        ]
    }
{% endschema %}