<!-- -- reveal your glow start -- -->
<div class="reveal_glow section">
    <div class="container">
        {% if section.settings.heading != blank %}
            <div class="section_header">
                <h2 class="title-lg paddingB">
                    {{ section.settings.heading }}
                </h2>
            </div>  
        {% endif %}
        <div class="row">
            {%- for block in section.blocks -%}
                {% case block.type %}
                    {% when 'option' %}
                        {% assign dashoffset = 100 | minus: block.settings.percent_bar %}
                        <div class="col-md-4">
                            <div class="rg_item">
                                {% if block.settings.image != blank %}
                                    <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt | escape }}" class="img-fluid">
                                {% endif %}
                                <div class="skincare_percent">
                                    <div class="progressCont">
                                        <span class="progressWrapper">
                                            <span class="progessInfo text-dark">{{ block.settings.percent_bar }}%</span>
                                            <svg class="vMQQx" height="59" width="59" viewBox="-29 -29 58 58">
                                                <defs>
                                                    <linearGradient id="gradient" x1="0" x2="0" y1="1" y2="0">
                                                        <stop offset="0%" stop-color="#C7E7DC"></stop>
                                                        <stop offset="100%" stop-color="#C7E7DC"></stop>
                                                    </linearGradient>
                                                </defs>
                                                <circle stroke="rgba(221, 224, 228, 1)" fill="none" pathLength="100"
                                                    class="K4v4P" r="24" style="stroke-width: 1px;"></circle>
                                                <circle visibility="visible" fill="none" pathLength="100"
                                                    transform="rotate(-90)" class="OKwUu" r="24" stroke="url(#gradient)"
                                                    style="stroke-dasharray: 100; stroke-dashoffset: {{ dashoffset }}; stroke-width: 4px;">
                                                </circle>
                                            </svg>
                                        </span>
                                    </div>
                                    {{ block.settings.text }}
                                </div>
                            </div>
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
    </div>
</div>
<!-- -- reveal your glow start -- -->


{% schema %}
    {
        "name": "t:sections.confidence.name",
        "class": "section-confidence",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            }
        ],
        "blocks": [
            {
                "type": "option",
                "name": "t:common.option.name",
                "limit": 3,
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:common.image.label"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "t:common.text.label"
                    },
                    {
                        "type": "range",
                        "id": "percent_bar",
                        "min": 0,
                        "max": 100,
                        "default": 70,
                        "step": 1,
                        "label": "t:common.percentage.label"
                    }
                ]
		    }
        ],
        "presets": [
			{
				"name": "t:sections.confidence.name"
			}
        ]
    }
{% endschema %}