{%- assign banner_count = 0 -%}

{%- for block in section.blocks -%}
	{%- case block.type -%}
        {%- when 'banner' -%}
            {%- assign banner_count = banner_count | plus: 1 -%}
        {%- when 'banner_holiday' -%}
            {%- assign banner_count = banner_count | plus: 1 -%}
        {%- when 'banner_14feb' -%}
            {%- assign banner_count = banner_count | plus: 1 -%}
    {%- endcase -%}
{%- endfor -%}

