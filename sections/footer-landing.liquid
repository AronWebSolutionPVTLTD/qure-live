<!-- -- footer start -- -->
<div class="footer-landing">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="footer-icon-sec">
                    <ul>
                        <li>
                            <img src="{{ 'footer-vogue.svg' | asset_url }}">
                        </li>
                        <li class="d-none d-md-block">
                            <img src="{{ 'footer-cosmopolitan.svg' | asset_url }}">
                        </li>
                        <li>
                            <img src="{{ 'footer-elle.svg' | asset_url }}">
                        </li>
                        <li>
                            <img src="{{ 'footer-glamour.svg' | asset_url }}">
                        </li>
                        <li>
                            <img src="{{ 'footer-grazia.svg' | asset_url }}">
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-12">
                <div class="row more-ques">
                    <div class="col-md-4 order-1 order-md-1">
                        <div class="more-question">
                            <h2>{{ section.settings.heading }}</h2>
                            {{ section.settings.text }}
                        </div>
                    </div>
                    <div class="col-md-4 order-3 order-md-2">
                        <div class="f-chat">
                            <img src="{{ 'footer-live_large.png' | asset_url }}">
                            <h4>Live Chat</h4>
                            <p>Experts are Available: <br>Monday-Friday, 9AM - 5PM EST</p>
                        </div>
                    </div>
                    <div class="col-md-4 order-2 order-md-3">
                        <div class="f-mail-detail">
                            <img src="{{ 'footer-msg.png' | asset_url }}">
                            <h4>Email</h4>
                            <a href="#">support@qureskincare.com</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="copyright">
                <ul>
                    {% if section.settings.menu %}
                        {% for link in linklists[section.settings.menu].links %}
                            <li>
                                <a href="{{ link.url }}" aria-label="{{ link.title | escape }}">{{ link.title }}</a>
                            </li>
                        {% endfor %}
                    {% endif %}
                    <li>
                        <a href="#" target="_blank">Â© 2024 Qure. All rights reserved. </a>
                    </li>
                </ul>
                {% if section.settings.text != blank %}
                    {{ section.settings.text }}
                {% endif %}
            </div>
        </div>
    </div>
</div>
<!-- -- footer end -- -->

{% schema %}
    {
        "name": "t:sections.footer-landing.name",
        "class": "section-footer-landing",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label" : "t:common.heading.label",
                "default": "Have More Questions? Contact Us!"
            },
            {
                "type": "richtext",
                "id": "text",
                "label" : "t:common.text.label"
            },
            {
                "type": "link_list",
                "id": "menu",
                "label": "t:common.menu.label"
            },
            {
                "type": "richtext",
                "id": "text_bottom",
                "label" : "t:common.text.label"
            }
        ],
        "blocks": [

        ]
    }
    {% endschema %}