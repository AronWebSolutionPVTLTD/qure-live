<div class="see_detailed bg-grey py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="see_detailed_info">
                    {% if section.settings.heading != blank %}
                        <h5>{{ section.settings.heading }}</h5> 
                    {% endif %}
        
                    {% if section.settings.text != blank %}
                        {{ section.settings.text }}
                    {% endif %}
                </div>
            </div>
            {% if section.blocks.size > 0 %}
                {%- for block in section.blocks -%}
                        {% if block.settings.button_label != blank %}
                            <div class="col-md-5">
                                <a class="btn btn-lg btn-primary buy_btn see_detailed" href="{{ block.settings.button_url }}" aria-label="{{ block.settings.button_label |  escape }}">{{ block.settings.button_label }}<img src="{{ 'arrow_right.svg' | asset_url }}" alt=""></a>
                            </div>
                    {% endif %}
                {%- endfor -%}
            {% endif %}
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "t:sections.call-to-action.name",
        "class": "section-call-to-action",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "t:common.text.label"
            }
        ],
        "blocks": [
            {
                "type": "button",
                "name": "t:common.button.name",
                "limit": 1,
                "settings": [
                    {
                        "type": "text",
                        "id": "button_label",
                        "default": "Button label",
                        "label": "t:common.button.label",
                        "info": "t:common.button.info"
                    },
                    {
                        "type": "url",
                        "id": "button_url",
                        "label": "t:common.button.url.label"
                    }
                ]
		    }
        ],
        "presets": [
			{
				"name": "t:sections.call-to-action.name",
                "settings": {
                    "heading": "Is this your kind of skincare ritual?",
                    "text": "<p>Take a look at our Micro-Infusion treatment protocols and instructions<\/p>"
                },
                "blocks": [
                    {
                        "type": "button",
                        "settings": {
                            "button_label": "See Detailed Guide",
                            "button_url": "https:\/\/www.qureskincare.com\/pages\/microinfusion-safety-guide"
                        }
                    }
                ]
			}
        ]
    }
{% endschema %}