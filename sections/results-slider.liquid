<!-- -- result section start -- -->
<div class="result_s section mi_landing_result" id="result_section">
    <div class="container">
        <div class="section_header text-center mb-3 mw-100">
            <h2 class="title-lg paddingB">
                {{ section.settings.heading }}
            </h2>
            <div class="refill_review justify-content-center">
                <div class="star_gp">
                    <img src="{{ 'star-review.svg' | asset_url }}" alt="">
                </div>
                <p class="text-sm fw-normal text-decoration-none">{{ section.settings.rating_text }}</p>
            </div>
        </div>
        <div class="result_s_wrapper">
            <div class="swiper dot_pagination result_slider">
                <div class="swiper-wrapper">
                    {% for block in section.blocks %}
                    <div class="swiper-slide">
                        <div class="result_item result_item_info_with_fixed">
                            <div class="result_img_m">
                                {% if block.settings.image != blank %}
                                <img src="{{ block.settings.image | img_url: '400x' }}" alt="">
                                {% endif %}
                            </div>
                            <div class="result_c_info">
                                {% if block.settings.heading != blank %}
                                <div class="star_gp">
                                    <p>{{ block.settings.heading }}</p>
                                </div>
                               {% endif %}
                            </div>
                            <div class="result_item_info">
                                {% if block.settings.text != blank %}
                                <div class="result_content">
                                    {{ block.settings.text }}
                                </div>
                                {% endif %}
                            </div>
                            <div class="result_learnMore d-block">
                                <div class="result_learnMore_wrap">
                                    <div class="result_c_info">
                                        <div class="r_flag">
                                            <div class="flag_img">
                                                <img src="{{ block.settings.image_country | img_url: '100x' }}" alt="">
                                            </div>
                                            <p class="r_c_name pe-2">{{ block.settings.client }}</p>
                                        </div>
                                        <div class="verified_img">
                                            <img src="{{ 'verified.svg' | asset_url }}" alt="">
                                            <p>Verified customer</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="skin_concerns">
                                    Skin concerns: {{ block.settings.concerns }}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <div class="pagination_navigation">
                    <div class="swiper-pagination"></div>
                    <div class="qureSlider-swiper-prev swiper-button-prev swiper-button"></div>
                    <div class="qureSlider-swiper-next  swiper-button-next swiper-button"></div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- -- result section end -- -->

{% schema %}
{
"name": "Results Slider",
"settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "t:common.heading.label",
        "default": "Thousands are out-glowing their insecurities"
    }
],
"blocks": [
    {
        "type": "Slide",
        "name": "t:sections.before-after-box.blocks.slide.name",
        "limit": 10,
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "t:common.heading.label"
            },
            {
                "type": "richtext",
                "id": "text",
                "default": "<p>I was very skeptical when my husband bought this mask for me. But after 6mo the results are amazing!! Iâ€™ve tried numerous serums for my sun spots but nothing worked until I used this mask. Definitely worth the money.</p>",
                "label": "t:common.text.label"
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "t:common.image.label"
            },
            {
                "type": "image_picker",
                "id": "image_country",
                "label": "t:common.client.country.label"
            },
            {
                "type": "text",
                "id": "client",
                "label": "t:common.client.label"
            },
            {
                "type": "text",
                "id": "concerns",
                "label": "Skin Concerns"
            }

        ]
    }
],
"presets": [
    {
        "name": "Results Slider"
    },
    
]
}
{% endschema %}