<!-- -- top rated product start -- -->
<div class="top_rated section" id="result_section">
    <div class="container">
        <div class="section_header paddingB text-center mb-4">
            <img src="{{ 'star-full.svg' | asset_url }}" alt="" class="img-fluid">
            {% if section.settings.heading != blank %}
                <h6>{{ section.settings.heading }}</h6>
            {% endif %}

            {% if section.settings.text != blank %}
                <h2 class="title-lg  mx-auto text-center">
                    {{ section.settings.text 
                    |  replace: '<p>', '' |  replace: '</p>', '' 
                    |  replace: '<em>', '<span class="red-line">' |  replace: '</em>', '</span>' 
                    }}
                </h2>
            {% endif %}
        </div>
        <div class="top_rated_ftr mw-800 mx-auto">
            {%- for block in section.blocks -%}
                {% if block.type == 'icon' %}
                    <div class="tr_ftr_item">
                        {% if block.settings.image != blank %}
                            <img src="{{ block.settings.image | img_url: '720x' }}" alt="{{ block.settings.image.alt | escape }}">
                        {% endif %}
                        {% if block.settings.heading != blank %}
                            <p>{{ block.settings.heading }}</p>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="top_rated_slider">
            <div class="twa__swiper rt_slider dot_pagination" id="twa__swiper-rt_slider"
                data-section-id="rt_slider" data-autoplay="false" data-loop="true" data-centered-mobile="true"
                data-centered-desktop="true" data-mobile="1" data-tablet="2" data-desktop="2.2"
                data-spacing="30" data-arrowleft="rt_slider-swiper-prev"
                data-arrowright="rt_slider-swiper-next">
                <div class="swiper-wrapper">
                    {%- for block in section.blocks -%}
                        {% if block.type == 'object' %}
                            <div class="swiper-slide">
                                <div class="tr_item">
                                    {% if block.settings.before_text != blank %}
                                        <div class="tr_item_before">
                                            <div class="tr_item_tag tr_item_tag_b">{{ block.settings.before_text }}</div>
                                            {% if block.settings.before_image != blank %}
                                                <img src="{{ block.settings.before_image | img_url: '720x' }}" alt="{{ block.settings.before_image.alt | escape }}" class="img-fluid">
                                            {% endif %}
                                        </div>
                                    {% endif %}

                                    {% if block.settings.after_text != blank %}
                                        <div class="tr_item_after">
                                            <div class="tr_item_tag tr_item_tag_a">{{ block.settings.after_text }}</div>
                                            {% if block.settings.after_image != blank %}
                                                <img src="{{ block.settings.after_image | img_url: '720x' }}" alt="{{ block.settings.after_image.alt | escape }}" class="img-fluid">
                                            {% endif %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="pagination_navigation">
                    <div class="swiper-pagination"></div>
                    <div class="rt_slider-swiper-prev custom-prev swiper-button"></div>
                    <div class="rt_slider-swiper-next custom-next swiper-button"></div>
                </div>
            </div>

            <div class="text-center reviews_btn">
                {%- for block in section.blocks -%}
                    {% if block.type == 'link' %}
                        <a href="{{ block.settings.link_url }}" {{ block.settings.link_label | escape }} class="btn mx-auto">{{ block.settings.link_label }} <img src="{{ 'arrow-down-white1.svg' | asset_url }}" class="img-fluid ms-3"></a>
                    {% endif %}
                {%- endfor -%}

            </div>
        </div>
    </div>
</div>
<!-- -- top rated product end -- -->

