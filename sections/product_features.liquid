<div class="imageText section qure_MI_ftr_wrap {{ section.settings.custom_class }}">
    <div class="container">
        <div class="hollywood_skin mt-0">
            <div class="row align-items-center">
                <div class="col-12 col-md-5">
                    {% if section.settings.image != blank %}
                        <img src="{{ section.settings.image | img_url: 'master' }}" alt="" class="img-fluid">
                    {% endif %}
                </div>
                <div class="col-12 col-md-7">
                    <div class="it_info p-0 ps-md-5 pt-md-0 pt-3">
                        {% if section.settings.title != blank %}
                            <h2 class="title-lg mb-3">{{ section.settings.title }}</h2>
                        {% endif %}
                        <div class="nozzel_benefit mw-493 py-4">
                            <div class="row">
                                {% for block in section.blocks %}
                                    {% if block.type == 'nozzle_option' %}
                                        <div class="col-4">
                                            <div class="text-center">
                                                {% if block.settings.nozzle_image != blank %}
                                                    <img src="{{ block.settings.nozzle_image | img_url: 'master' }}" class="img-fluid" alt="{{ block.settings.nozzle_image.alt }}">
                                                {% endif %}
                                                {% if block.settings.nozzle_text != blank %}
                                                    <p class="pt-3">{{ block.settings.nozzle_text }}</p>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        {% if section.settings.description != blank %}
                            <p class="fw-normal">{{ section.settings.description }}</p>
                        {% endif %}
                        {% if section.settings.button_text != blank %}
                            <a href="{{ section.settings.button_link }}" class="mt-4 btn btn-lg btn-primary mw-268 fw-medium">{{ section.settings.button_text }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.product_feature.label",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:common.image.main"
    },
    {
      "type": "text",
      "id": "title",
      "label": "t:common.heading.label"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "t:common.description.label"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "t:common.button.name"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:common.button.url.label"
    },
    {
      "type": "textarea",
      "id": "custom_class",
      "label": "t:common.classname.custom"
    }
  ],
  "blocks": [
    {
      "type": "nozzle_option",
      "name": "t:common.nozzle_option.label",
      "settings": [
        {
          "type": "image_picker",
          "id": "nozzle_image",
          "label": "t:common.nozzle_option.image"
        },
        {
          "type": "text",
          "id": "nozzle_text",
          "label": "t:common.nozzle_option.text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.product_feature.label"
    }
  ]
}
{% endschema %}
