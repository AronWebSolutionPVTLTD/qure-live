<div class="imageText qure_MI_ftr_wrap {{ section.settings.background }} {{ section.settings.custom_class }}">
  <div class="container">
    <div class="hollywood_skin mt-0">
      <div class="row align-items-center">
        <div class="col-12 col-md-5">
          {% for block in section.blocks %}
            {% if block.type == 'image' and block.settings.image %}
              <img
                src="{{ block.settings.image | img_url: 'master' }}"
                alt="{{ block.settings.image.alt }}"
                class="img-fluid"
              >
              {% break %}
            {% elsif block.type == 'wistia' and block.settings.video %}
              <div class="it_img pb-3 pb-md-0 mw-mob-100">
                <div class="wistia_responsive_padding" style="position:relative;">
                  <div
                    class="wistia_responsive_wrapper"
                    style="height:100%;left:0;position:absolute;top:0;width:100%;"
                  >
                    <div
                      class="wistia_embed wistia_async_{{ block.settings.video }} seo=false videoFoam=true"
                      style="height:100%;position:relative;width:100%"
                    >
                      &nbsp;
                    </div>
                  </div>
                </div>
              </div>
              {% break %}
            {% endif %}
          {% endfor %}
        </div>
        {% for block in section.blocks %}
          {% if block.type == 'text' %}
            <div class="col-12 col-md-7">
              <div class="it_info p-0 ps-md-5 pt-md-0 pt-3">
                <h2 class="title-lg mb-3">{{ block.settings.heading }}</h2>
                <div class="nozzel_benefit mw-493 py-4">
                  <div class="row">
                    <div class="col-4">
                      <div class="text-center">
                        {% if block.settings.img_1 != blank %}
                          <img src="{{ block.settings.img_1 | img_url: '40x' }}" alt="{{ block.settings.img_1.alt }}">
                        {% endif %}
                        {% if block.settings.text_1 != blank %}
                          <p class="pt-3">{{ block.settings.text_1 }}</p>
                        {% endif %}
                      </div>
                    </div>
                    <div class="col-4">
                      <div class="text-center">
                        {% if block.settings.img_2 != blank %}
                          <img src="{{ block.settings.img_2 | img_url: '40x' }}" alt="{{ block.settings.img_2.alt }}">
                        {% endif %}
                        {% if block.settings.text_2 != blank %}
                          <p class="pt-3">{{ block.settings.text_2 }}</p>
                        {% endif %}
                      </div>
                    </div>
                    <div class="col-4">
                      <div class="text-center">
                        {% if block.settings.img_3 != blank %}
                          <img src="{{ block.settings.img_3 | img_url: '40x' }}" alt="{{ block.settings.img_3.alt }}">
                        {% endif %}
                        {% if block.settings.text_3 != blank %}
                          <p class="pt-3">{{ block.settings.text_3 }}</p>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
                {% if block.settings.text_content != blank %}
                  <p class="fw-normal">
                    {{ block.settings.text_content }}
                  </p>
                {% endif %}
                {% for block in section.blocks %}
                {% if block.type == 'button' and block.settings.btn_text != blank %}
                <a href="{{ block.settings.btn_url }}" class="mt-4 btn btn-lg btn-primary mw-268 fw-medium">{{ block.settings.btn_text }}</a>
                {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.img_txt.second",
  "settings": [
    {
      "type": "select",
      "id": "background",
      "label": "t:common.background.label",
      "options": [
        {
          "value": "bg-grey",
          "label": "Grey"
        },
        {
          "value": "bg-yellow",
          "label": "Yellow"
        },
        {
          "value": "trasnparent",
          "label": "Transparent"
        }
      ]
    },
    {
      "type": "textarea",
      "id": "custom_class",
      "label": "t:common.classname.custom",
      "default": "section"
    }
  ],
  "max_blocks": 3,
  "blocks": [
    {
      "type": "image",
      "name": "t:common.image.label",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:common.image.label"
        }
      ]
    },
    {
      "type": "wistia",
      "name": "t:common.wistia.label",
      "settings": [
        {
          "type": "text",
          "id": "video",
          "label": "t:common.wistia.id.label"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:common.text.content",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:common.heading.label"
        },
        {
          "type": "textarea",
          "id": "text_content",
          "label": "t:common.text.content"
        },
        {
          "type": "image_picker",
          "id": "img_1",
          "label": "t:common.icon.label"
        },
        {
          "type": "text",
          "id": "text_1",
          "label": "t:common.text.label"
        },
        {
          "type": "image_picker",
          "id": "img_2",
          "label": "t:common.icon.label"
        },
        {
          "type": "text",
          "id": "text_2",
          "label": "t:common.text.label"
        },
        {
          "type": "image_picker",
          "id": "img_3",
          "label": "t:common.icon.label"
        },
        {
          "type": "text",
          "id": "text_3",
          "label": "t:common.text.label"
        }
      ]
    },
    {
        "type": "button",
        "name": "t:common.button.name",
        "settings": [
            {
                "type": "text",
                "id": "btn_text",
                "label": "t:common.button.label"
            },
            {
                "type": "url",
                "id": "btn_url",
                "label": "t:common.button.url.label"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.img_txt.second"
    }
  ]
}
{% endschema %}
