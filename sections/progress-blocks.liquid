<!-- -- user report start -- -->
<div class="user_report bg-lightGrey section">
    <div class="container">
        {%- if section.settings.section_heading != blank -%}
            <div class="section_header mb-3 text-center">
                <h2 class="title-lg paddingB">{{ section.settings.section_heading }}</h2>
                <p>{{ section.settings.subheading }}</p>
            </div>
        {% endif %}
        <div class="user_report_wrap">
            {%- for block in section.blocks -%}
                {% if block.type == 'column' %}
                    <div class="progressCont"><span class="progressWrapper">
                            <span class="progessInfo text-dark">{{ block.settings.percent_text }}%</span>
                            <svg class="vMQQx" height="77" width="77" viewBox="-29 -29 58 58">
                                <defs>
                                    <linearGradient id="gradient" x1="0" x2="0" y1="1" y2="0">
                                        <stop offset="0%" stop-color="#C7E7DC"></stop>
                                        <stop offset="100%" stop-color="#C7E7DC"></stop>
                                    </linearGradient>
                                </defs>
                                <circle stroke="rgba(221, 224, 228, 1)" fill="none" pathLength="100" class="K4v4P"
                                    r="24" style="stroke-width: 1px;"></circle>
                                <circle visibility="visible" fill="none" pathLength="100" transform="rotate(-90)"
                                    class="OKwUu" r="24" stroke="url(#gradient)"
                                    style="stroke-dasharray: 100; {% assign dashoffset = 100 | minus: block.settings.percent_bar %} stroke-dashoffset: {{ dashoffset }}%; stroke-width: 5px;">
                                </circle>
                            </svg>
                        </span>
                        <div class="tooltip_wrap">
                            <div class="tooltip_btn">
                                <div class="tootltip_text">smoother facial <strong>wrinkles</strong> and
                                    <strong>fine lines</strong> <img src="https://qureskincaredns.com/new/assets/info_lg.svg" alt="">
                                    <div class="tooltip_info">
                                        <img src="https://qureskincaredns.com/new/assets/tooltip_triangle.svg" alt="">
                                        <p>*About the clinical trial: Clinical trial was conducted and investigated
                                            the
                                            potential of light-emitting diode (LED) treatments with a 660 nm. LED
                                            effects
                                            were then assessed in aged/photoaged individuals in a split-face
                                            single-blinded
                                            study.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {%- endfor -%}
        </div>
    </div>
</div>
<!-- -- user report end -- -->

{% schema %}
    {
        "name": "progress.section",
        "settings": [
            {
                "type": "text",
                "id": "section_heading",
                "label": "Heading",
                "default": "Proof In Numbers"
            },
            {
                "type": "richtext",
                "id": "subheading",
                "label": "Sub Heading"
            }
        ],
        "blocks": [
            {
                "type": "column",
                "name": "column",
                "limit": 3,
                "settings": [
                    {
                        "type": "text",
                        "id": "percent_text",
                        "label": "Percentage Text"
                    },
                    {
                        "type": "range",
                        "id": "percent_bar",
                        "min": 0,
                        "max": 100,
                        "default": 50,
                        "step": 1,
                        "label": "Percentage Bar"
                    }
                ]
		    }
        ],
        "presets": [
            {
                "name": "Progress Blocks"
            }
        ]
    }
{% endschema %}