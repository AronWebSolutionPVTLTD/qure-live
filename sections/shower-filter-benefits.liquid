<div class="shower_filter-benefits section">
  <div class="container">
    <div class="section_header text-md-center ms-0 m-md-auto mw-970">
      {% if section.settings.heading != blank %}
        <h2 class="title-lg pb-md-0 pb-3">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.paragraph != blank %}
        <p>{{ section.settings.paragraph }}</p>
      {% endif %}
    </div>
    <div class="shower_benefits-content mw-932">
      <div class="row">
        <div class="col-lg-5 col-md-6">
          <div class="benefits_list">
            <ul>
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'list_item' %}
                    {% if block.type == 'list_item' %}
                      <li>{{ block.settings.list_point }}</li>
                    {% endif %}
                {% endcase %}
              {% endfor %}
            </ul>
            <p class="d-md-none pt-4">{{ section.settings.img_txt }}</p>
          </div>
        </div>
        <div class="col-lg-7 col-md-6 order-first order-md-0">
          <div class="benefits_img">
            {% for block in section.blocks %}
              {% if block.type == 'image' %}
                <p class="d-md-block d-none">{{ block.settings.img_txt }}</p>
                <img
                  src="{{ block.settings.desktop_image | img_url: 'master' }}"
                  class="img-fluid d-md-block d-none"
                  alt="{{ block.settings.desktop_image.alt }}"
                >
                <img
                  src="{{ block.settings.mobile_image | img_url: 'master' }}"
                  class="img-fluid d-md-none"
                  alt="{{ block.settings.mobile_image.alt }}"
                >
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.shower_benefits.label",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:common.heading.label"
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "t:common.subheading.label"
    }
  ],
  "blocks": [
