<div class="ingredients_list {{ section.settings.custom_class }}">
  <div class="container">
    <div class="section_header text-md-center ms-0 m-md-auto">
      {% if section.settings.heading != blank %}
        <h2 class="title-lg">
          {{ section.settings.heading }}
        </h2>
      {% endif %}
      {% if section.settings.subtext != blank %}
        {{ section.settings.subtext }}
      {% endif %}
    </div>
    <div class="ingredients_content">
      <div class="row gy-3">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'column' %}
              <div class="col-md-4 col-sm-6 {{ block.settings.column_class }}">
                <div class="ingredient">
                  {% if block.settings.flag != blank %}
                    <div class="ingredient_flag" style="background: {{ block.settings.flag-color }};">
                      <p>{{ block.settings.flag }}</p>
                    </div>
                  {% endif %}
                  <div class="ingredients_text">
                    {% if block.settings.i-heading != blank %}
                      <p class="fw-bold">{{ block.settings.i-heading }}</p>
                    {% endif %}
                    {% if block.settings.i-text != blank %}
                      <p>{{ block.settings.i-text }}</p>
                    {% endif %}
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="row gy-3 pt-4">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'column' %}
              <div class="col-md-4 col-sm-6">
                <div class="row">
                  <div class="col-6">
                    <div class="ingredients_img border-end">
                      {% if block.settings.i_icon != blank %}
                        <img src="{{ block.settings.i_icon | img_url: 'master' }}" alt="">
                      {% endif %}
                      {% if block.settings.ingredient1 != blank %}
                        <p>{{ block.settings.ingredient1 }}</p>
                      {% endif %}
                    </div>
                  </div>
                  <div class="col-6">
                    <div class="ingredients_img">
                      {% if block.settings.i_icon2 != blank %}
                        <img src="{{ block.settings.i_icon2 | img_url: 'master' }}" alt="">
                      {% endif %}
                      {% if block.settings.ingredient2 != blank %}
                        <p>{{ block.settings.ingredient2 }}</p>
                      {% endif %}
                    </div>
                  </div>
                  {% if block.settings.ingredient_text != blank %}
                    <div class="col-12">
                      <div class="text-center px-4">
                        <p>{{ block.settings.ingredient_text }}</p>
                      </div>
                    </div>
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    {% for block in section.blocks %}
      {% if block.settings.heading2 != blank %}
        <div class="section_header text-start py-5 text-md-center ms-0 m-md-auto">
          <h6 class="n_sub-heading">{{ block.settings.heading2 }}</h6>
        </div>
      {% endif %}
    {% endfor %}
    <div class="skin_problems mw-932">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'skin_image' %}
            <div class="problem_inner">
              {% if block.settings.skin_problem != blank %}
                <img
                  src="{{ block.settings.skin_problem | img_url: 'master' }}"
                  class="img-fluid"
                  alt="{{ block.settings.skin_problem.alt }}"
                >
              {% endif %}
              {% if block.settings.problem_text != blank %}
                <div class="pt-4">
                  <p><img src="{{ 'correct_circle.svg' | asset_url }}" alt="">{{ block.settings.problem_text }}</p>
                </div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

